<% provide(:title, 'Register') %>
<h1>Register New Account</h1>

<%= form_for :user, url: users_path do |f| %>
  <%= render partial: 'application/errors', layout: false, locals: { errors: @errors } %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </p>

  <p>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </p>

  <p class="pure-u-1 pure-u-md-1-3">
    <%= f.label :cohort %>
    <select id="user_cohort_id" name="user[cohort_id]" class="pure-input-1-2">
      <% @cohorts.each do |cohort| %>
      <option value="<%= cohort.id %>"><%= cohort.name %></option>
      <% end %>
    </select>
  </p>

  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :password_confirmation, 'Confirm Password' %>
    <%= f.password_field :password_confirmation %>
  </p>

  <p>
    <button id="sign_up_btn" class="pure-button pure-button-primary sign-up">Create Account</button>
  </p>
<% end %>
